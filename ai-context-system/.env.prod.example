# 环境变量配置文件 - 生产环境
# 复制此文件为 .env.prod 并根据需要修改

# 镜像仓库配置
DOCKER_REGISTRY=your-registry.com
IMAGE_TAG=latest

# 域名配置
DOMAIN_NAME=ai-context.your-company.com

# 数据库配置 (生产环境需要强密码)
POSTGRES_USER=ai_context_prod_user
POSTGRES_PASSWORD=your-super-strong-postgres-password-here
POSTGRES_DB=ai_context_prod

# Redis配置
REDIS_PASSWORD=your-redis-password-here

# Neo4j配置
NEO4J_PASSWORD=your-strong-neo4j-password-here

# MinIO配置
MINIO_ROOT_USER=ai-context-minio-admin
MINIO_ROOT_PASSWORD=your-minio-strong-password-here

# API配置
LLM_API_KEY=your-production-llm-api-key
LLM_BASE_URL=https://your-llm-api-endpoint.com/v1

# JWT配置 (生产环境必须是强密钥)
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-long

# 应用配置
ENVIRONMENT=production
LOG_LEVEL=INFO
DEBUG=False

# 监控配置
SENTRY_DSN=https://your-sentry-dsn-here
GRAFANA_PASSWORD=your-grafana-admin-password

# ChromaDB配置
CHROMA_AUTH_TOKEN=your-production-chroma-token

# SSL证书配置
SSL_CERT_PATH=/etc/ssl/certs/your-domain.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.key

# 备份配置
BACKUP_S3_BUCKET=your-backup-bucket
BACKUP_S3_ACCESS_KEY=your-backup-access-key
BACKUP_S3_SECRET_KEY=your-backup-secret-key

# 邮件配置 (用于告警通知)
SMTP_HOST=your-smtp-server.com
SMTP_PORT=587
SMTP_USER=alerts@your-company.com
SMTP_PASSWORD=your-smtp-password
ALERT_EMAIL=admin@your-company.com