# =============================================================================
# 内网环境配置（Intranet）
# =============================================================================
# 此文件由系统自动加载，当 NETWORK_ENV=intranet 时生效
# =============================================================================

# LLM API 配置 - 内网统一 API 网关
LLM_API_BASE=https://oneapi.sangfor.com/v1
LLM_CHAT_MODEL=qwen3-32b
LLM_MAX_TOKENS=4096
LLM_TEMPERATURE=0.7

# Embedding 配置 - 使用内网 Embedding API
EMBEDDING_PROVIDER=api
EMBEDDING_API_BASE=https://oneapi.sangfor.com/v1
EMBEDDING_MODEL=Qwen3-Embedding-8B
EMBEDDING_DIMENSION=1024

# API 配额配置
LLM_REQUEST_TIMEOUT=60
LLM_MAX_RETRIES=3
LLM_RATE_LIMIT=100

# 网络配置
HTTP_PROXY=
HTTPS_PROXY=
NO_PROXY=localhost,127.0.0.1

# 内网特性
USE_INTERNAL_DNS=true
INTERNAL_NETWORK=true
