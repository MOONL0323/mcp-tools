# =============================================================================
# 测试环境配置（Development）
# =============================================================================
# 此文件由系统自动加载，当 ENVIRONMENT=development 时生效
# 不建议手动修改，除非你知道自己在做什么
# =============================================================================

# 环境标识
NODE_ENV=development
DEBUG=true

# 服务配置
BACKEND_HOST=0.0.0.0
WORKERS=1

# 数据库配置 - 测试环境使用 SQLite
DATABASE_URL=sqlite+aiosqlite:///./data/ai_context_dev.db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis - 测试环境可选（默认禁用）
REDIS_ENABLED=false
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# Neo4j - 测试环境可选
NEO4J_ENABLED=true
NEO4J_HOST=localhost
NEO4J_PORT=7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=dev_password
NEO4J_DATABASE=ai_context_dev

# ChromaDB - 向量数据库
CHROMA_ENABLED=true
CHROMA_HOST=localhost
CHROMA_PORT=8001
CHROMA_PERSIST_DIR=./data/chroma_dev

# MinIO - 测试环境可选（默认禁用，使用本地文件系统）
MINIO_ENABLED=false
UPLOAD_DIR=./data/uploads

# JWT 认证 - 测试环境使用简单密钥
JWT_SECRET_KEY=dev-jwt-secret-not-for-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=480
REFRESH_TOKEN_EXPIRE_DAYS=30

# 文件上传
MAX_FILE_SIZE=104857600
ALLOWED_FILE_TYPES=.txt,.md,.pdf,.doc,.docx,.py,.js,.ts,.json,.xml,.html

# CORS - 测试环境开放
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://127.0.0.1:3000
CORS_ALLOW_CREDENTIALS=true

# 日志
LOG_LEVEL=DEBUG
LOG_FILE=./logs/dev.log
LOG_FORMAT=text

# 监控 - 测试环境禁用
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false
SENTRY_ENABLED=false

# 性能配置 - 测试环境降低
API_RATE_LIMIT=1000
CACHE_TTL=600

# 前端配置
REACT_APP_API_BASE_URL=http://localhost:8000/api
REACT_APP_MCP_BASE_URL=http://localhost:3001
REACT_APP_ENVIRONMENT=development

# MCP Server
MCP_SERVER_NAME=ai-context-mcp-dev
MCP_LOG_LEVEL=debug
MCP_BACKEND_URL=http://localhost:8000

# 开发工具
RELOAD=true
ENABLE_SWAGGER=true
ENABLE_PROFILER=false

# 安全 - 测试环境宽松
ALLOWED_HOSTS=*
SECURE_COOKIES=false
HTTPS_ONLY=false
SESSION_TIMEOUT=7200
